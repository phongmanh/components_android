<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppLogoText" parent="">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_64sdp</item>
    </style>

    <style name="AppSloganText" parent="">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="AppToolbar">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_17sdp</item>
    </style>

    <style name="GButtonPrimary" parent="">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/_17sdp</item>
        <item name="android:background">@drawable/selector_ripple_rounded_primary</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GTextButtonPrimary" parent="GButtonPrimary">
        <item name="android:background">@drawable/selector_ripple_primary</item>
    </style>

    <style name="GButtonSmallPrimary" parent="GButtonPrimary">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="GRadioButtonOutlined" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:background">@drawable/selector_radio_button_background</item>
    </style>

    <style name="GRadioButtonPrimary" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
    </style>

    <style name="GTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/selector_edit_text_border_color</item>
    </style>

    <style name="GSpinnerField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/selector_edit_text_border_color</item>
    </style>

</resources>